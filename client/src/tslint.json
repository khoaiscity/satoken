{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            [
                "app",
                "user",
                "exception",
                "layout",
                "header"
            ],
            "camelCase"
        ],
        "component-selector": [
            false,
            "element",
            [
                "app",
                "user",
                "exception",
                "layout",
                "header",
                "page",
                "component",
                "ex"
            ],
            "kebab-case"
        ]
    }
}